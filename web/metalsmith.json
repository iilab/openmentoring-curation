{
  "source": "content",
  "destination": "web/build",
  "clean": false,
  "plugins": {
    "metalsmith-env": {},
    "metalsmith-ignore": [
      ".git/**",
      ".gitignore",
      ".travis.yml",
      "_config.yml",
      "INTENTIONS.md",
      "LICENSE",
      "Makefile",
      "README.md"
    ],
    "metalsmith-paths": {
      "property": "paths"
    },
    "metalsmith-collections": {
      "cards": {
        "pattern": "*/topics/:topic/:unit/*.md"
      },
      "units": {
        "pattern": "*/topics/:topic/:unit/index.md"
      },
      "topics": {
        "pattern": "*/topics/:topic/index.md"
      }
    },
    "metalsmith-debug": true,
    "metalsmith-filemetadata": [
      {"pattern": "*/topics/*/*/*-intro*.md", "preserve": "true", "metadata": {"stack": "intro", "type": "card", "title": "Introduction"}},
      {"pattern": "*/topics/*/*/*-scenario*.md", "preserve": "true", "metadata": {"stack": "scenario", "type": "card", "title": "Scenario"}},
      {"pattern": "*/topics/*/*/*-learn.md*", "preserve": "true", "metadata": {"stack": "learn", "type": "card", "title": "Learn"}},
      {"pattern": "*/topics/*/*/*-test*.md", "preserve": "true", "metadata": {"stack": "test", "type": "activity", "title": "Test"}},
      {"pattern": "*/topics/*/*/*-next*.md", "preserve": "true", "metadata": {"stack": "next", "type": "card", "title": "Next"}},
      {"pattern": "*/topics/*/*/*-*.md", "metadata": {"layout": "card.md"}},
      {"pattern": "*/topics/*/*/*-*-hrd*.md", "metadata": {"profile": "hrd"}},
      {"pattern": "*/topics/*/*/*-*-journo*.md", "metadata": {"profile": "journo"}},
      {"pattern": "*/topics/*/*/*-*-content*.md", "metadata": {"array": "true", "protect": "content"}},
      {"pattern": "*/topics/*/*/*-*-identity*.md", "metadata": {"array": "true", "protect": "journo"}},
      {"pattern": "*/topics/*/*/*-*-network*.md", "metadata": {"array": "true", "protect": "journo"}},
      {"pattern": "*/topics/*/*/*-*-targeted*.md", "metadata": {"array": "true", "protect": "journo"}},
      {"pattern": "*/topics/*/*/index.md", "metadata": {"layout": "unit.md"}},
      {"pattern": "*/topics/*/index.md", "metadata": {"layout": "topic.md"}}
    ],
    "metalsmith-layouts": {
      "engine": "nunjucks",
      "default": "default.md",
      "directory": "web/layouts"       
    }
  }
}