{
  "source": "content",
  "destination": "web/build",
  "clean": false,
  "plugins": {
    "metalsmith-ignore": [
      ".git/**",
      ".gitignore",
      ".travis.yml",
      "_config.yml",
      "INTENTIONS.md",
      "LICENSE",
      "Makefile",
      "README.md"
    ],
    "metalsmith-collections": {
      "cards": {
        "pattern": "*/topics/:cardtopic/:cardunit/*.md"
      },
      "units": {
        "pattern": "*/topics/:unittopic/:unit/index.md"
      },
      "topics": {
        "pattern": "*/topics/:topic/index.md"
      }
    },
    "metalsmith-debug": true,
    "metalsmith-filemetadata": [
      {"pattern": "*/topics/*/*/*.md", "metadata": {"layout": "card.md"}},
      {"pattern": "*/topics/*/*/index.md", "metadata": {"layout": "unit.md"}},
      {"pattern": "*/topics/*/index.md", "metadata": {"layout": "topic.md"}}
    ],
    "metalsmith-register-helpers": {
      "directory": "web/helpers"
    },
    "metalsmith-layouts": {
      "engine": "handlebars",
      "default": "default.md",
      "directory": "web/layouts"       
    },
    "metalsmith-assets": {
      "source": "web/src",
      "directory": "web/build"
    }
  }
}